@page
@model OnlineBookStore.Pages.Checkout.IndexModel
@{
    ViewData["Title"] = "Checkout";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Checkout</h2>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div class="mb-3">
                <label asp-for="CheckoutForm.FullName" class="form-label"></label>
                <input asp-for="CheckoutForm.FullName" class="form-control" />
                <span asp-validation-for="CheckoutForm.FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CheckoutForm.Email" class="form-label"></label>
                <input asp-for="CheckoutForm.Email" class="form-control" />
                <span asp-validation-for="CheckoutForm.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CheckoutForm.Address" class="form-label"></label>
                <input asp-for="CheckoutForm.Address" class="form-control" />
                <span asp-validation-for="CheckoutForm.Address" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CheckoutForm.City" class="form-label"></label>
                    <input asp-for="CheckoutForm.City" class="form-control" />
                    <span asp-validation-for="CheckoutForm.City" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="CheckoutForm.Country" class="form-label"></label>
                    <input asp-for="CheckoutForm.Country" class="form-control" />
                    <span asp-validation-for="CheckoutForm.Country" class="text-danger"></span>
                </div>
                <div class="col-md-2 mb-3">
                    <label asp-for="CheckoutForm.ZipCode" class="form-label"></label>
                    <input asp-for="CheckoutForm.ZipCode" class="form-control" />
                    <span asp-validation-for="CheckoutForm.ZipCode" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="CheckoutForm.CardNumber" name="Card Number" class="form-label"></label>
                <input asp-for="CheckoutForm.CardNumber" class="form-control" />
                <span asp-validation-for="CheckoutForm.CardNumber" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Place Order</button>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Order Summary</h5>
                @if (Model.TotalAmount > 0)
                {
                    <p><strong>Total:</strong> $@Model.TotalAmount.ToString("0.00")</p>
                }
                else
                {
                    <p>Your cart is empty.</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
