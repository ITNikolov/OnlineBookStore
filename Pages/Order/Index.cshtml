@page
@model OnlineBookStore.Pages.Order.IndexModel
@{
    ViewData["Title"] = "My Orders";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2 class="mb-4">My Orders</h2>

@if (!Model.Orders.Any())
{
    <div class="alert alert-info">You have no orders yet.</div>
}
else
{
    foreach (var order in Model.Orders)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Order #@order.Id</h5>
                <h6 class="card-subtitle mb-2 text-muted">Placed on @order.OrderDate.ToString("g")</h6>
                <p><strong>Total:</strong> @order.TotalAmount.ToString("C")</p>
                <ul>
                    @foreach (var item in order.Items)
                    {
                        <li>@item.Product?.Title (@item.Quantity)</li>
                    }
                </ul>
            </div>
        </div>
    }
}
