@page
@model OnlineBookStore.Pages.Order.IndexModel
@{
    ViewData["Title"] = "Your Orders";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Your Order History</h2>

@if (!Model.Orders.Any())
{
    <div class="alert alert-info mt-4">You have no past orders.</div>
}
else
{
    foreach (var order in Model.Orders)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><strong>Order Date:</strong> @order.OrderDate.ToShortDateString()</span>
                <span class="fw-bold">Total: @order.TotalAmount.ToString("C")</span>
            </div>
            <div class="card-body">
                @foreach (var item in order.Items)
                {
                    <div class="row mb-3 align-items-center border-bottom pb-2">
                        <div class="col-md-2">
                            <img src="@item.Product?.ImageURL" class="img-fluid rounded" style="max-height: 80px;" />
                        </div>
                        <div class="col-md-7">
                            <h5 class="mb-1">@item.Product?.Title</h5>
                            <p class="text-muted mb-1">by @item.Product?.Author</p>
                            <p class="mb-0"><strong>Quantity:</strong> @item.Quantity</p>
                        </div>
                        <div class="col-md-3 text-end">
                            <p class="mb-0 text-success fw-bold">
                                @item.Price.ToString("C") x @item.Quantity
                            </p>
                        </div>
                    </div>
                }

                <div class="d-flex justify-content-between mt-3 text-end">
                    <form method="post" asp-page-handler="Delete" asp-route-id="@order.Id" onsubmit="return confirm('Are you sure you want to delete this order?');">
                        <a asp-page="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">
                            View Details
                        </a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete Order</button>
                    </form>
                </div>
            </div>
        </div>
    }
}
